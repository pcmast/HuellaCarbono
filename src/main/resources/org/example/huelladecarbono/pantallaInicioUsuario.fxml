<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<VBox prefHeight="500.0" prefWidth="800.0" stylesheets="@EstilosHuella.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.huelladecarbono.controllers.PantallaPrincipalController">

    <children>

        <MenuBar VBox.vgrow="NEVER">
            <menus>

                <Menu mnemonicParsing="false" text="Usuario">
                    <items>
                        <MenuItem onAction="#miPerfil" text="Mi perfil" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#cerrarSesion" text="Cerrar sesión" />
                    </items>
                </Menu>

                <Menu mnemonicParsing="false" text="Gestión">
                    <items>
                        <MenuItem onAction="#verHuellas" text="Mis huellas" />
                        <MenuItem onAction="#verHabitos" text="Mis hábitos" />
                    </items>
                </Menu>

                <Menu mnemonicParsing="false" text="Análisis">
                    <items>
                        <MenuItem onAction="#verImpacto" text="Mi impacto ambiental" />
                        <MenuItem onAction="#verRecomendaciones" text="Recomendaciones" />
                    </items>
                </Menu>

            </menus>
        </MenuBar>

        <StackPane VBox.vgrow="ALWAYS" styleClass="center-container">

            <VBox spacing="25"
                  alignment="TOP_CENTER"
                  maxWidth="650">

                <!-- TÍTULO -->
                <Label text="Huella de Carbono"
                       styleClass="anchor-label"/>

                <!-- CARD BIENVENIDA -->
                <VBox spacing="10"
                      prefWidth="600"
                      styleClass="card">

                    <Label fx:id="lblUsuario"
                           text="Bienvenido, Usuario"
                           styleClass="title"/>

                    <Label fx:id="lblHuellaMes"
                           text="Huella total este mes: -- kg CO₂"/>

                    <Label fx:id="lblCategoriaMayor"
                           text="Categoría con mayor impacto: --"/>

                </VBox>

                <!-- CARD RECOMENDACIONES -->
                <VBox spacing="10"
                      prefWidth="500"
                      styleClass="card">

                    <Label text="Recomendaciones para ti"
                           styleClass="title"/>

                    <Label fx:id="lblRecomendacion1" text="• " />
                    <Label fx:id="lblRecomendacion2" text="• " />
                    <Label fx:id="lblRecomendacion3" text="• " />

                </VBox>

            </VBox>

        </StackPane>

    </children>
</VBox>
